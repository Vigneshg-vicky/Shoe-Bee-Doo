        <div class="card-body">
            <div class="table-responsive">
                <table id="salesreport" class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead style="background: rgb(13, 128, 211); color: aliceblue;">
                        <tr>
                            <th>Sl. No</th>
                            <th>Date</th>
                            <th>Product </th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Discounts</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each Sales}}
                        <tr>
                            <td>{{@index}} </td>
                            <td>{{this.Date}}</td>
                            <td>{{this.productName}} </td>
                            <td>{{this.quantity}} </td>
                            <td>₹{{this.price}}</td>
                            {{#if this.discountPrice }}
                            <td>₹{{this.discountPrice}}</td>
                            {{else}}
                            <td>Nil</td>
                            {{/if}}
                            <td>₹{{this.revenue}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot align="center" class="">
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Total</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="d-flex justify-content-center">
                    <nav aria-label="...">
                        <ul class="pagination pagination-sm">
                            {{#each page}}
                            <li class="page-item active" aria-current="page">
                                <span class="page-link" style="border-radius: 10px; background:#009688"> <a
                                        onclick="page({{this}})" style="color:white;">{{this}}</a></span>
                            </li>
                            {{/each}}


                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>



