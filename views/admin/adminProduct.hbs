    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product Details</h6>
            <br>
            {{!-- Add Product Button --}}

            <button type="button" class="btn btn-primary"><a class="text-decoration-none text-white" href="/admin/addproduct">Add Product</a></button>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr align="center">
                            <th>Product Name</th>
                            {{!-- <th>Description</th> --}}
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th>Stock</th>
                            <th>Price</th>
                            {{!-- <th>Image</th> --}}
                            <th>Action</th>
                        </tr>
                    </thead>
                    {{#each data}}
                    <tbody>
                        
                        <tr align="center">
                            <td>{{this.product}}</td>
                            {{!-- <td>{{this.description}}</td> --}}
                            <td>{{this.category}}</td>
                            <td>{{this.CatName.categoryName}}</td>
                            <td>{{this.stock}}</td>
                            <td>{{this.originalprice}}</td>
                            <td>
                                {{!-- Edit Button --}}

                                <a href="/admin/editproduct/{{this._id}}"><i
                                        class="fa-solid fa-pen-to-square"></i></a>

                                &nbsp 

                                {{!-- Delete Button --}}

                                <a href="/admin/delete"><i class="fa-solid fa-trash-can"></i></a>

                            </td>
                        </tr>
                        
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>

